{
  "name": "rice-delivery-app",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "concurrently": "^6.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "nodemon": "^2.0.20",
    "server": "^1.0.4"
  },
  "scripts": {
    "start": "node server.js",
    "client": "cd client && npm run start",
    "server": "nodemon server.js",
    "dev": "concurrently -n server,client -c green,cyan \"nodemon server.js\" \"cd client && npm run start\"",
    "build": "npm i && cd client && npm i && npm run build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
